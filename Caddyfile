csealumni.jkkniu.edu.bd {
    # Rate limiting configuration
    rate_limit * {
        zone ddos_protection {
            key {remote_host}
            events 100
            window 10s
        }
    }

    # API requests handler
    handle_path /api/* {
        reverse_proxy backend:4000
    }

    # Serve images from /app/uploads/images
    handle_path /uploads/* {
        root * /app/uploads/images
        file_server
    }

    handle_path /admin/api/* {
        # Additional rate limiting for admin endpoints
        rate_limit {
            zone admin_protection {
                key {remote_host}
                events 30
                window 60s
            }
        }
        reverse_proxy backend:4000 {
            uri strip_prefix /admin
        }
    }

    # Static files handler
    handle {
        root * /srv
        try_files {path} /index.html
        file_server
        encode gzip
    }

    # Security headers with updated CSP
    header {
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        X-XSS-Protection "1; mode=block"
        X-Frame-Options "DENY"
        Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: blob:; connect-src 'self' https://csealumni.jkkniu.edu.bd;"
    }
}